---
const { color, x, y, height, width, id } = Astro.props;


const style = {
    background: `radial-gradient(circle, ${color} 0%, rgba(233, 36, 200, 0) 80%)`,
    transform: "translate(" + x + "%, " + y + "%)",
    height: height + "%",
    width: width + "%",
  };
---



<div class='background-light' id={id} style={style}></div>